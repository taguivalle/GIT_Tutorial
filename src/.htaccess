# -------------------------------------------------
#  Habilitar encabezados de CSP (Content‑Security‑Policy)
#  Sólo se ejecuta si el módulo mod_headers está activo
# -------------------------------------------------
<IfModule mod_headers.c>
    Header set Content-Security-Policy "
        default-src 'self';
        style-src 'self' https://cdnjs.cloudflare.com;
        script-src 'self' 'unsafe-inline' 'unsafe-eval';
        frame-src https://gitpod.io https://*.gitpod.io;
        frame-ancestors 'self' https://*.gitpod.io https://gitpod.io http://localhost http://127.0.0.1;
        img-src 'self' data:;
        font-src 'self' https://fonts.gstatic.com;
        connect-src 'self';
    "
</IfModule>